{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "quotes": [2, "single"],
    "indent": [2, 4, { "SwitchCase": 1 }],
    "no-console": "off",
    "eqeqeq": "warn",
    "semi": [2, "never"],
    "no-var": "warn",
    "prefer-arrow-callback": "warn",
    "prefer-spread": "warn",
    "prefer-rest-params": "warn",
    "prefer-template": "warn",
    "object-curly-spacing": [2, "always"]
  }
}
